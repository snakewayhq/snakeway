request_filter_device {
  enable = false

  #----------------------------------------------------------------------------
  # Method policy
  #----------------------------------------------------------------------------
  allow_methods = ["GET", "POST"]

  #----------------------------------------------------------------------------
  # Header policy
  #----------------------------------------------------------------------------
  deny_headers = [
    "x-forwarded-host",
    "x-original-url",
  ]

  required_headers = [
    "host",
    "user-agent",
  ]

  #----------------------------------------------------------------------------
  # Size limits
  #----------------------------------------------------------------------------
  max_header_bytes = 16384   # 16 KB
  max_body_bytes = 16384     # 16 KB
}
